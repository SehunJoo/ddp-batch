set -e

if [ $# -ne 1 ]; then
    echo 1>&2 "Usage: $(basename $0) <jobid>"
    exit 127
fi

# Get arguments

jobid=$1


# Check the number of random structure left (./hobber/*.res files)'

echo "    starting crud monitoring ..."

touch ./status.${jobid}.crud

counter=1
SECONDS=0
until [[ ${counter} -eq 0 ]]
do
    if [[ $SECONDS -ge 5 ]]; then
        counter=$(find . ./hopper -maxdepth 1 -type f -name "*.res" | sed "/data.res/d" | wc -l)
        ngood=$(ls good_castep/*.res 2> /dev/null | wc -l)
        nbad=$(ls bad_castep/*.res 2> /dev/null | wc -l)

        sed -i "/check_time/d"                                                ./status.${jobid}.crud
        sed -i "/no. structures/d"                                            ./status.${jobid}.crud
        echo "check_time:                   $(date +%Y-%m-%d\ %H:%M:%S)"   >> ./status.${jobid}.crud
        echo "no. structures (remaining):   ${counter}"                    >> ./status.${jobid}.crud
        echo "no. structures (good):        $ngood"                        >> ./status.${jobid}.crud
        echo "no. structures (bad):         $nbad"                         >> ./status.${jobid}.crud
        SECONDS=0
    fi

    [[ -f ./stopmonitor ]] && echo '    stopping crud monitoring ...' && exit 0
    [[ -f ./STOP        ]] && echo '    stopping crud monitoring ...' && exit 0
    sleep 1
done

sleep 1


# Create a DONE file to signal that the job is done

touch ./done.crud

echo '    crud complete'

exit 0
